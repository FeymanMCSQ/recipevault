generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id // Clerk ID
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipes   Recipe[]
}

model Recipe {
  id           String   @id @default(uuid())
  title        String
  tags         String[] @default([])
  notes        String   @default("")
  sourceUrl    String
  sourceTitle  String   @default("")
  capturedText String
  userId       String   @default("legacy_user")
  user         User     @relation(fields: [userId], references: [id])


  @@index([userId])
  
  // AI-processed structured fields
  ingredients  Json     @default("[]")  // Array of { component: string, items: string[] }
  instructions String[] @default([])
  suggestions  String[] @default([])
  aiTags       String[] @default([])
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("recipes")
}

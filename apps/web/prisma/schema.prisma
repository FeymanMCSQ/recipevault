generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Recipe {
  id           String   @id @default(uuid())
  title        String
  tags         String[] @default([])
  notes        String   @default("")
  sourceUrl    String
  sourceTitle  String   @default("")
  capturedText String
  
  // AI-processed structured fields
  ingredients  Json     @default("[]")  // Array of { component: string, items: string[] }
  instructions String[] @default([])
  suggestions  String[] @default([])
  aiTags       String[] @default([])
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("recipes")
}
